# =============================================================================
# ODIN v7.0 - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your setup
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=odin
POSTGRES_USER=odin
POSTGRES_PASSWORD=change_me_in_production

# -----------------------------------------------------------------------------
# Cache & Message Bus (Redis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Knowledge Graph (Neo4j) - Optional
# -----------------------------------------------------------------------------
NEO4J_ENABLED=false
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me_in_production

# -----------------------------------------------------------------------------
# Vector Store (FAISS) - Path for local storage
# -----------------------------------------------------------------------------
FAISS_INDEX_PATH=/data/faiss

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Primary provider (choose one): ollama, anthropic, openai, google, groq, etc.
ODIN_LLM_PROVIDER=ollama
ODIN_LLM_MODEL=qwen2.5:7b

# -----------------------------------------------------------------------------
# Ollama (Local LLM Server)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://ollama:11434

# -----------------------------------------------------------------------------
# Anthropic (Claude)
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# -----------------------------------------------------------------------------
# OpenAI (GPT)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o
# OPENAI_ORG_ID=org-...

# -----------------------------------------------------------------------------
# Google (Gemini)
# -----------------------------------------------------------------------------
# GOOGLE_API_KEY=...
# GOOGLE_MODEL=gemini-1.5-pro

# -----------------------------------------------------------------------------
# xAI (Grok)
# -----------------------------------------------------------------------------
# XAI_API_KEY=...
# XAI_MODEL=grok-2

# -----------------------------------------------------------------------------
# Groq (Fast Inference)
# -----------------------------------------------------------------------------
# GROQ_API_KEY=gsk_...
# GROQ_MODEL=llama-3.1-70b-versatile

# -----------------------------------------------------------------------------
# Mistral
# -----------------------------------------------------------------------------
# MISTRAL_API_KEY=...
# MISTRAL_MODEL=mistral-large-latest

# -----------------------------------------------------------------------------
# Together AI
# -----------------------------------------------------------------------------
# TOGETHER_API_KEY=...
# TOGETHER_MODEL=meta-llama/Llama-3.1-70B-Instruct

# -----------------------------------------------------------------------------
# DeepSeek
# -----------------------------------------------------------------------------
# DEEPSEEK_API_KEY=...
# DEEPSEEK_MODEL=deepseek-coder

# -----------------------------------------------------------------------------
# HuggingFace
# -----------------------------------------------------------------------------
# HF_API_KEY=hf_...
# HF_MODEL=meta-llama/Llama-3.1-8B-Instruct

# -----------------------------------------------------------------------------
# Custom OpenAI-Compatible Endpoint
# -----------------------------------------------------------------------------
# CUSTOM_LLM_BASE_URL=https://your-server.com/v1
# CUSTOM_LLM_API_KEY=...
# CUSTOM_LLM_MODEL=your-model

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
API_PORT=8000
API_HOST=0.0.0.0
API_SECRET_KEY=generate_a_secure_random_key_minimum_32_characters

# -----------------------------------------------------------------------------
# Orchestrator
# -----------------------------------------------------------------------------
ORCHESTRATOR_PORT=9000
ORCHESTRATOR_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Features
# -----------------------------------------------------------------------------
ODIN_ENV=production
ODIN_DEBUG=false

# Enable/disable features
ENABLE_CONSENSUS_ORACLE=true
ENABLE_KNOWLEDGE_GRAPH=false
ENABLE_WEB_RESEARCH=true
ENABLE_AUTO_CHECKPOINT=true
ENABLE_AUTO_ROLLBACK=true

# -----------------------------------------------------------------------------
# Performance
# -----------------------------------------------------------------------------
MAX_PARALLEL_AGENTS=5
AGENT_TIMEOUT=300
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Privacy
# -----------------------------------------------------------------------------
LOG_PROMPTS=true
LOG_RESPONSES=true
ANONYMIZE_LOGS=false

{
  "name": "odin-core",
  "displayName": "ODIN Core - Autonomous AI Codebase Assistant",
  "description": "VS Code extension for ODIN v6.0 - Autonomous AI Codebase Assistant with integrity monitoring, rollback capabilities, and test generation",
  "version": "6.0.0",
  "publisher": "make-with-passion-by-krigs",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Testing",
    "Linters"
  ],
  "keywords": [
    "ai",
    "assistant",
    "odin",
    "testing",
    "integrity",
    "rollback",
    "autonomous"
  ],
  "activationEvents": [
    "workspaceContains:**/.odin",
    "onCommand:odin.audit",
    "onCommand:odin.rollback",
    "onCommand:odin.testgen",
    "onCommand:odin.openLearningLog"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "odin.audit",
        "title": "ODIN: Audit Project",
        "icon": "$(search)"
      },
      {
        "command": "odin.rollback",
        "title": "ODIN: Rollback to Last Checkpoint",
        "icon": "$(history)"
      },
      {
        "command": "odin.testgen",
        "title": "ODIN: Generate Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "odin.openLearningLog",
        "title": "ODIN: Open Learning Log",
        "icon": "$(book)"
      },
      {
        "command": "odin.refreshStatus",
        "title": "ODIN: Refresh Status",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "odin": [
        {
          "id": "odin-status",
          "name": "ODIN Status",
          "when": "resourceExtname == .odin || workspaceContains:**/.odin"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odin",
          "title": "ODIN Core",
          "icon": "$(shield)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "odin.refreshStatus",
          "when": "view == odin-status",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "odin.audit",
          "when": "workspaceContains:**/.odin"
        },
        {
          "command": "odin.rollback",
          "when": "workspaceContains:**/.odin"
        },
        {
          "command": "odin.testgen",
          "when": "workspaceContains:**/.odin"
        },
        {
          "command": "odin.openLearningLog",
          "when": "workspaceContains:**/.odin"
        }
      ]
    },
    "configuration": {
      "title": "ODIN Core",
      "properties": {
        "odin.cliPath": {
          "type": "string",
          "default": "odin",
          "description": "Path to the ODIN CLI executable"
        },
        "odin.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh status when files change"
        },
        "odin.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/make-with-passion-by-krigs/odin"
  },
  "license": "MIT",
  "author": {
    "name": "Make With Passion by Krigs"
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://odin-ai.dev/schemas/learning_log.schema.json",
  "title": "ODIN Learning Log Schema",
  "description": "Schema for ODIN v6.0 learning_log.json file",
  "type": "object",
  "required": [
    "session_id",
    "created_at",
    "learned_patterns",
    "successful_actions",
    "corrected_errors",
    "user_feedback",
    "context_shifts",
    "dependency_updates"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "learned_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["best_practice", "pattern", "antipattern", "optimization"],
            "description": "Type of learned pattern"
          },
          "language": {
            "type": "string",
            "description": "Programming language"
          },
          "pattern": {
            "type": "string",
            "description": "Description of the pattern"
          },
          "source": {
            "type": "string",
            "description": "Source of the learning (docs, feedback, etc.)"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When this pattern was learned"
          }
        },
        "required": ["type", "pattern", "source"],
        "additionalProperties": false
      },
      "description": "Array of learned patterns"
    },
    "successful_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Type of action performed"
          },
          "target": {
            "type": "string",
            "description": "Target of the action"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When action was performed"
          },
          "details": {
            "type": "string",
            "description": "Additional details about the action"
          }
        },
        "required": ["action", "timestamp"],
        "additionalProperties": false
      },
      "description": "Array of successful actions"
    },  
    "corrected_errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Description of the error"
          },
          "fix": {
            "type": "string",
            "description": "How the error was fixed"
          },
          "source": {
            "type": "string",
            "description": "File or location where error occurred"
          },
          "feedback": {
            "type": "string",
            "enum": ["perfect", "partial", "false"],
            "description": "User feedback on the correction"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When error was corrected"
          }
        },
        "required": ["error", "fix", "source"],
        "additionalProperties": false
      },
      "description": "Array of corrected errors"
    },
    "user_feedback": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When feedback was given"
          },
          "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Numerical rating (1-5)"
          },
          "comment": {
            "type": "string",
            "description": "User comment"
          },
          "action_context": {
            "type": "string",
            "description": "Context of the action being rated"
          }
        },
        "required": ["timestamp"],
        "additionalProperties": false
      },
      "description": "Array of user feedback entries"
    },
    "context_shifts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "object",
            "description": "Previous context"
          },
          "to": {
            "type": "object",
            "description": "New context"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When context shift occurred"
          },
          "trigger": {
            "type": "string",
            "description": "What triggered the context shift"
          }
        },
        "required": ["timestamp"],
        "additionalProperties": false
      },
      "description": "Array of context changes"
    },
    "dependency_updates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "dependency": {
            "type": "string",
            "description": "Name of the dependency"
          },
          "from_version": {
            "type": "string",
            "description": "Previous version"
          },
          "to_version": {
            "type": "string",
            "description": "New version"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When update occurred"
          },
          "reason": {
            "type": "string",
            "description": "Reason for the update"
          }
        },
        "required": ["dependency", "timestamp"],
        "additionalProperties": false
      },
      "description": "Array of dependency updates"
    }
  },
  "additionalProperties": false
}

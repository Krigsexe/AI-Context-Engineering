{
    "extends": "../typescript-config/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "types": [
            "node"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}